<Window x:Class="ScreenClock.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ScreenClock="clr-namespace:ScreenClock"
    AllowsTransparency="True" Background="Transparent" WindowStyle="None" ShowInTaskbar="False">
    
    <Window.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Увеличить" Click="CloseMenuIncreaseSizeClick"/>
            <MenuItem Header="Уменьшить" Click="CloseMenuDecreaseSizeClick"/>
            <MenuItem Header="Закрыть" Click="CloseMenuItemClick"/>
        </ContextMenu>
    </Window.ContextMenu>
    
    <Viewbox>
        <ScreenClock:WpfClock/>
    </Viewbox>
</Window>
